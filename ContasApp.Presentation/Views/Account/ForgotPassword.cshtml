@* Definindo a classe de modelo de dados da página *@
@model ContasApp.Presentation.Models.AccountForgotPasswordViewModel

@{
    //definindo o layout da página
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="text-center">
    <h4>Esqueci minha senha!</h4>
    <p>Informe os dados abaixo para recuperar sua senha de acesso.</p>
    <hr/>
</div>

<div class="text-center mb-2">
    <strong>@TempData["Mensagem"]</strong>
</div>

@using(Html.BeginForm())
{
    <div class="mb-2">
        <label>Email de acesso:</label>
        @Html.TextBoxFor(model => model.Email,
            new { @class = "form-control", @placeholder="Ex: joaosilva@gmail.com" })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)
        </span>
    </div>

    <div class="mb-2 d-grid">
        <input type="submit" class="btn btn-primary" value="Recuperar Minha Senha"/>
    </div>

    <div class="mb-2 text-center">
        <a href="/Account/Login">Voltar para a página inicial.</a>
    </div>

}